
<h1>Login</h1>

<%= form_for @user_session, :url => '/login' do |f| %>

	<% if @user_session.errors %>
		<ul class="login-errors">
			<% for e in @user_session.errors %>
				<li><%= e[0].to_s.capitalize %> <%= e[1] %></li>
			<% end %>
		</ul>
	<% end %>

	<p>
		<%= f.label :login %><br />
		<%= f.text_field :login %><br />
	</p>

	<p>
		<%= f.label :password %><br />
		<%= f.password_field :password %><br />
	</p>

	<p>
		<%= f.submit "Login" %>
	</p>
<% end %>
